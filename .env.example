# NexusSentinel API - Environment Variables
# Copy this file to .env and fill in your values

# Project metadata
PROJECT_NAME=NexusSentinel
API_TITLE=NexusSentinel API
API_DESCRIPTION=Stock Market Sentiment Analysis API
API_VERSION=1.0.0
API_PREFIX=/api/v1

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# API Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true  # Set to false in production

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=nexussentinel
DB_SCHEMA=public
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_ECHO=false  # Set to true for SQL query logging

# Alternatively, provide full DATABASE_URL
# DATABASE_URL=postgresql+asyncpg://user:password@host:port/dbname

# Security settings
SECRET_KEY=replace_with_secure_generated_key_at_least_32_chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS settings
# Comma-separated list of allowed origins (e.g., http://localhost:3000,http://localhost:8080)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_PERIOD_SECONDS=60

# Logging configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json
LOG_FILE=logs/nexussentinel.log

# External services
SENTIMENT_API_KEY=your_sentiment_api_key
MARKET_DATA_API_URL=https://api.example.com/market-data
MARKET_DATA_API_KEY=your_market_data_api_key
POLYGON_API_KEY=your_polygon_api_key

# Reddit API settings
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=NexusSentinel/1.0
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
ENABLE_REDDIT_TRACKING=true

# Feature flags
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TECHNICAL_INDICATORS=true
ENABLE_SOCIAL_MEDIA_TRACKING=true
ENABLE_NEWS_TRACKING=true
