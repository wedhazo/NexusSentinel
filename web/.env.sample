# NexusSentinel Web - Environment Variables
# Copy this file to .env and customize as needed

# API Configuration
# Base URL for the backend API (no trailing slash)
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# Environment
VITE_APP_ENV=development

# Feature flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MOCK_DATA=true

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_DEFAULT_LANGUAGE=en

# Authentication
VITE_AUTH_STORAGE_KEY=nexus_sentinel_auth
VITE_TOKEN_REFRESH_INTERVAL=840000 # 14 minutes in milliseconds

# Chart defaults
VITE_DEFAULT_CHART_PERIOD=30 # days
VITE_DEFAULT_CHART_INTERVAL=1d # 1d, 1h, etc.

# Development helpers
VITE_ENABLE_QUERY_DEVTOOLS=true
